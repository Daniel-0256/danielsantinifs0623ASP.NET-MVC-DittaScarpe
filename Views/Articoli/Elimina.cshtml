@model Articolo

<h2>Elimina Articolo</h2>

<h3>Sei sicuro di voler eliminare l'articolo "@Model.Nome"?</h3>

@using (Html.BeginForm("ConfermaElimina", "Articoli", new { id = Model.Id }, FormMethod.Post))
{
    <input type="submit" value="Elimina" class="btn btn-danger" />
    @Html.ActionLink("Annulla", "Index", null, new { @class = "btn btn-default" })
}
